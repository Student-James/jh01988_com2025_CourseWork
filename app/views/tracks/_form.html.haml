= form_for @track, :html => {:id => "track"} do |f|
  - if @track.errors.any?
    #error_explanation
      %h2= "#{pluralize(@track.errors.count, "error")} prohibited this track from being saved:"
      %ul
        - @track.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :album
    %p= @track.album.title
    = f.hidden_field :album_id, value: @track.album.id
  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
